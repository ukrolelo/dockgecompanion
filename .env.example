# Dockge Companion Environment Variables
# Copy this file to .env and customize the values

# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (optional)
DOCKGE_COMPANION_DB_PATH=~/.dockge-companion/containers.db

# Docker Configuration (optional)
DOCKER_HOST=unix:///var/run/docker.sock

# Web Interface Configuration (optional)
WEB_HOST=0.0.0.0
WEB_PORT=8000

# Monitoring Configuration (optional)
DEFAULT_SCAN_INTERVAL=24
RETENTION_DAYS=90
